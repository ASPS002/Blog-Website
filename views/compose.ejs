<%- include('partials/header') -%>

    <h1>Compose</h1>
  
   <!-- Just search for bootstrap form on google-->
    <form class="" action="/compose" method="post">
       
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" name="postTitle" placeholder="Enter Title" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="postBody">Post</label>
            <textarea rows="5" cols="100" name="postBody" class="form-control" placeholder="Enter Post"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

    <%- include('partials/footer') -%>